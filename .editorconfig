# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true

# Unix-style newlines with a newline ending every file except .json
[*]
end_of_line = lf
#insert_final_newline = true
[*.{js,ts,html,css,scss,sh,eslintignore,gitignore}]
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Default charset
[*.{js,html,css,scss,json,sh,yaml}]
charset = utf-8

# 4 tabs indentation for markup and css
[*.{html,css,scss}]
indent_style = space
indent_size = 4

# 2 tabs indentation for code
[*.{js,json,sh,bowerrc,md}]
indent_style = space
indent_size = 2

# 2 space indentation for code
[*.{yml,yaml}]
indent_style = space
indent_size = 2
